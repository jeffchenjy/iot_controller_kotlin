<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/log_bg">
        <TextView
            style="@style/inputtextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:id="@+id/loginText"
            android:textSize="30sp"
            android:paddingLeft="50dp"
            android:paddingBottom="10dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"
            android:backgroundTint="#61FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="16dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_circle" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    android:hint="@string/username">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/inputtextColor"
                        android:id="@+id/signup_username"
                        android:layout_width="match_parent"
                        android:drawableStart="@drawable/ic_person_pin"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:drawablePadding="8dp"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nicknameTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    android:hint="@string/nickname">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/inputtextColor"
                        android:id="@+id/signup_nickname"
                        android:layout_width="match_parent"
                        android:drawableStart="@drawable/ic_account_person"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:drawablePadding="8dp"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:errorEnabled="true"
                    app:endIconMode="clear_text"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    android:hint="@string/email">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/inputtextColor"
                        android:id="@+id/signup_email"
                        android:layout_width="match_parent"
                        android:drawableStart="@drawable/ic_email"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:drawablePadding="8dp"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:endIconMode="password_toggle"
                    app:errorEnabled="true"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    android:hint="@string/password">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/inputtextColor"
                        android:id="@+id/signup_password"
                        android:layout_width="match_parent"
                        android:drawableStart="@drawable/ic_account_lock"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:drawablePadding="8dp"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    style="@style/Button_style"
                    android:textColor="@color/toolbar_color_light"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/signUp_btn"
                    android:id="@+id/signup_button"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"
                    app:cornerRadius = "20dp"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loginRedirectText"
                    android:text="@string/isMember"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:layout_marginTop="35dp"
                    android:textSize="14sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>
