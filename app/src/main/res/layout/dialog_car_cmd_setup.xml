<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/carSetup_id">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:columnCount="2"
        app:rowCount="4">

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/up_icon" />

            <TextView
                android:id="@+id/textView_forward"
                style="@style/textColor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="Forward"
                android:textAlignment="center"
                android:fontFamily="@font/rounded_mplus"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editText_forward"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/a_icon" />

            <TextView
                android:id="@+id/textView_a"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="A"
                android:textAlignment="center"
                android:textColor="#8BC34A"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_a"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/down_icon" />

            <TextView
                android:id="@+id/textView_back"
                style="@style/textColor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="Back"
                android:textAlignment="center"
                android:fontFamily="@font/rounded_mplus"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editText_back"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/b_icon" />

            <TextView
                android:id="@+id/textView_b"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="B"
                android:textAlignment="center"
                android:textColor="#E91E63"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_b"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/left_icon" />

            <TextView
                android:id="@+id/textView_left"
                style="@style/textColor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="Left"
                android:textAlignment="center"
                android:fontFamily="@font/rounded_mplus"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editText_left"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/x_icon" />

            <TextView
                android:id="@+id/textView_x"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="X"
                android:textAlignment="center"
                android:textColor="#2196F3"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_x"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/right_icon" />

            <TextView
                android:id="@+id/textView_right"
                style="@style/textColor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="Right"
                android:textAlignment="center"
                android:fontFamily="@font/rounded_mplus"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editText_right"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/y_icon" />

            <TextView
                android:id="@+id/textView_y"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="Y"
                android:textAlignment="center"
                android:textColor="#FFEB3B"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_y"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>