<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/BottomSheetBackgroundStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/gender_bottom_sheet"
            style="@style/Widget.Material3.BottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
            <!-- Drag handle for accessibility
            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/drag_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />-->
            <!-- Bottom sheet contents. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:gravity="end">
                <TextView
                    android:id="@+id/closeTextView"
                    style="@style/inputtextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/close_bottomSheet"
                    android:textSize="14sp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/edit_profile_underline" />
                <TextView
                    android:id="@+id/unselectTextView"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginVertical="5dp"
                    android:text="@string/unselect"
                    android:textSize="16sp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/edit_profile_underline" />
                <TextView
                    android:id="@+id/maleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginVertical="5dp"
                    android:text="@string/gender_male"
                    android:textSize="16sp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/edit_profile_underline" />
                <TextView
                    android:id="@+id/femaleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/gender_female"
                    android:textSize="16sp"/>
            </LinearLayout>
        </FrameLayout>
</LinearLayout>