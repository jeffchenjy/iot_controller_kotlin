<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下狀態 -->
    <item android:state_pressed="true">
        <ripple android:color="#868DAA">
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="#868DAA"
                        android:centerColor="#2499A8"
                        android:endColor="#0B165E"  />
                    <corners android:radius="100dp" />
                </shape>
            </item>
        </ripple>
    </item>
    <!-- 預設狀態 -->
    <item>
        <shape android:shape="rectangle">
            <!--漸層顏色-->
            <gradient
                android:angle="90"
                android:startColor="#0B165E"
                android:centerColor="#2499A8"
                android:endColor="#868DAA"  />
            <corners android:radius="100dp" />
        </shape>
    </item>
</selector>