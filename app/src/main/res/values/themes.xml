<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Iot_kotlin" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/toolbar_color_light</item>
        <item name="android:navigationBarColor">@color/toolbar_color_light</item>
        <item name="fontFamily">@font/rounded_mplus</item>
    </style>

    <style name="Theme.Iot_kotlin" parent="Base.Theme.Iot_kotlin" />

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:background">@color/toolbar_color_light</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:fontFamily">@font/rounded_mplus</item>
        <item name="android:textColor">@color/toolbar_color</item>
    </style>

    <style name="Button_style" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:fontFamily">@font/rounded_mplus</item>
    </style>
    <style name="textColor">
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="toolBartextColor">
        <item name="titleTextColor">@color/text_color</item>
    </style>
    <style name="ScreenBackgroundColor">
        <item name="android:background">@color/toolbar_color_light</item>
    </style>
    <style name="iconColor">
        <item name= "backgroundTint">@color/icon_color</item>
    </style>
    <style name="CustomDialogTheme">
    </style>
</resources>